    background-image: -ms-linear-gradient(top, green_top, green_bottom);
    background-image: -o-linear-gradient(top, green_top, green_bottom);
    padding .7em
    width auto
    font-size 1.4em
    color #fff
    bordes(5px)
    border solid 3px green_border


tran()
    -webkit-transition: color .4s ease-out
     -ms-transition: color .4s ease-out
     -o-transition: color .4s ease-out
     -moz-transition: color .4s ease-out

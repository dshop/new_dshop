red_top = #f36965
red_bottom = #c33f38
red_border = #de423a

blue_top = #318bfb
blue_bottom = #2b75d1
blue_border = #1b63bd

green_top = #55cd13
green_bottom = #43a110
green_border = #3f960f

bordes()
    -ms-border-radius arguments
    -moz-border-radius arguments
    -o-border-radius arguments
    -webkit-border-radius arguments
    border-radius arguments

call_action_red()
    background-color: red_top;
    background-image: -webkit-gradient(linear, 0% 0%,0% 0%, from(red_top), to(red_bottom));
    background-image: -webkit-linear-gradient(top, red_top, red_bottom);
    background-image: -moz-linear-gradient(top, red_top, red_bottom);
    background-image: -ms-linear-gradient(top, red_top, red_bottom);
    background-image: -o-linear-gradient(top, red_top, red_bottom);
    padding .7em
    width auto
    font-size 1.4em
    color #fff
    bordes(5px)
    border solid 3px red_border

call_action_blue()
    background-color: blue_top;
    background-image: -webkit-gradient(linear, 0% 0%,0% 0%, from(blue_top), to(blue_bottom));
    background-image: -webkit-linear-gradient(top, blue_top, blue_bottom);
    background-image: -moz-linear-gradient(top, blue_top, blue_bottom);
    background-image: -ms-linear-gradient(top, blue_top, blue_bottom);
    background-image: -o-linear-gradient(top, blue_top, blue_bottom);
    padding .5em
    width auto
    font-size 1.4em
    color #fff
    bordes(5px)
    border solid 3px blue_border

call_action_green()
    background-color: green_top;
    background-image: -webkit-gradient(linear, 0% 0%,0% 0%, from(green_top), to(green_bottom));
    background-image: -webkit-linear-gradient(top, green_top, green_bottom);
